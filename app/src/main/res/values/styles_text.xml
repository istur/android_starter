<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="C2CBaseText">
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="C2CAccentText">
        <item name="android:textColor">@color/textAccent</item>
    </style>

    <style name="TextBold.Secondary" parent="C2CAccentText">
        <item name="android:textColor">@color/colorSecondaryBlue</item>
    </style>

    <style name="TextRegular.12.Grey" parent="C2CBaseText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
    </style>

    <style name="TextRegular.16.Grey" parent="C2CBaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
    </style>

    <style name="TextRegular.Brownish" parent="C2CBaseText">
        <item name="android:textColor">@color/brownish_grey</item>
    </style>

    <style name="TextRegular.14.primary" parent="C2CBaseText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextRegularBlackSmall" parent="C2CBaseText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PageTitleBold" parent="C2CBaseText">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- ex TitleH4 -->
    <style name="PageTitleNoBold" parent="C2CBaseText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleH6" parent="C2CBaseText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LabelBold" parent="C2CBaseText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LabelRegular" parent="C2CBaseText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AlertTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TimePriceBold" parent="C2CBaseText">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TimeLabel" parent="C2CBaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">3</item>
    </style>

    <style name="DateLabel" parent="C2CBaseText">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="ButtonBold" parent="C2CBaseText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button" parent="C2CBaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">1</item>
    </style>

    <style name="ButtonRow" parent="C2CBaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/red_violet</item>
    </style>

    <style name="AlertMessage">
        <item name="android:textColor">@color/alert_description</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SpinnerLight" parent="C2CBaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="JourneyTypeSelector" parent="TitleH6">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SubTitle" parent="C2CBaseText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="C2CEditTextSmartcardDeliveryMethod" parent="android:style/Widget.EditText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/textDarkBackground</item>
        <item name="android:background">@drawable/rounded_shape_no_background</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>